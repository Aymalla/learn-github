<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Library Management System</title>
    <link rel="stylesheet" href="/css/site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" defer></script>
</head>
<body>
    <header class="bg-primary text-white text-center py-4 mb-4">
        <h1 class="display-4">Library Management System</h1>
        <p class="lead">Manage your books efficiently</p>
    </header>

    <main class="container mb-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-4 mt-4 footer">
        <p class="mb-0">&copy; 2025 Library Management System. All rights reserved.</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
